---
import Body from "@layouts/Body.svelte";
import Head from "@layouts/Head.svelte";
import Nav from "@components/global/Nav.svelte";
import ThemeSelect from "@components/global/ThemeSelect.svelte";
import "@styles/global.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <Body>
    <Nav>
      <ThemeSelect client:load />
    </Nav>
    <slot />
  </Body>
</html>
